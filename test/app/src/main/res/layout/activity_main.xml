<?xml version="1.0" encoding="utf-8"?>
<com.example.admin.mylayout.LinearLayoutPercent
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:layout="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.mylayout.MainActivity">

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World1!"
        layout:layout_widthPercent="0.2"
        layout:layout_heightPercent="0.3"
        android:background="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World11!"
        layout:layout_widthPercent="0.7"
        layout:layout_heightPercent="0.2"
        android:background="@color/colorAccent"
        />

</com.example.admin.mylayout.LinearLayoutPercent>
